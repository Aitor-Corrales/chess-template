<section>
    <div class="board">
        <%= for row <- 0..7 do %>
            <%= for column <- 0..7 do %>
            <% square_color = if rem(row + column, 2) == 1, do: :black, else: :white %>
                <div phx-click="send-piece" class={"square #{square_color}"}>
                    <% token = Map.get(@state, {row, column}) %>
                    <%= if token !== nil do %>
                        <div phx-click="select-piece" class={"figure #{token.colour} #{token.piece}"}></div>
                    <% end %>
                </div>
            <% end %>
        <% end %>
    </div>
</section>
